<EndFloor>

<Elevators 1 to 2>
    Speed = 0.5
    Acceleration = 0.01
    Deceleration = 0.7
    OpenSpeed = 1.5

    if(%elevator% = 1) CreateElevator 6, 14, 0, 0
    if(%elevator% = 2) CreateElevator -6, 14, 0, 1
<EndElevators>
