    AddWall MainWindows, -20, 20, -20, -20, %fullheight%, %fullheight%, 0, 0, 0, 0, False, False, False, True

    #Interfloor bottom
    AddInterfloorFloor Brick, -20, 20, 20, 20, 0, 0, 0

    #Interfloor top
    AddInterfloorFloor Brick, -20, 20, 20, 20, %interfloorheight% - 0.05, 0, 0

    #Interfloor walls
    #AddInterfloorWall Brick, -20, -20, 20, -20, %interfloorheight%, %interfloorheight%, 0, 0, 0, 0
