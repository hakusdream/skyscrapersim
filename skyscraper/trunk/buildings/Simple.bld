    InterfloorHeight = 2.24
    DoorHeight = 6.24
    DoorWidth = 3

    #Floor
    AddFloor Granite, -20, 20, 20, -20, 0, 0, 0, False

    #Ceiling
    AddFloor Marble3, -20, 20, 20, -20, %height% - 0.05, 0, 0, False

    #External walls
    AddWall MainWindows, -20, -20, 20, -20, %fullheight%, %fullheight%, 0, 0, 0, 0, False, False, False, True
    AddWall MainWindows, 20, -20, 20, 20, %fullheight%, %fullheight%, 0, 0, 0, 0, False, False, False, True
